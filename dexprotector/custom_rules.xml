<?xml version="1.0" encoding="UTF-8"?>
<project name="dexprotector_rules" default="debug">

<taskdef name="dexprotector" classname="com.licel.dexprotector.ant.DexProtectorTask"
classpath="${dexprotector.home}/dexprotector.jar"/>

 <target name="-post-build">
 	<dexprotector verbose="true"
 		srcFile="${out.final.file}"
 		destFile="${out.final.file}"
 		mode = "${build.target}"
        keystore="${key.store}"
        storepass="${key.store.password}"
        alias="${key.alias}"
        keypass="${key.alias.password}"
 	configFile="dexprotector.xml"/>
 </target>


</project>
